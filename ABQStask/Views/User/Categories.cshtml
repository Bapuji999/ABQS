@model List<Category>

<h1>Category List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    @if (!string.IsNullOrEmpty(category.ImagePath))
                    {
                        <img src="@Url.Content(category.ImagePath)" alt="Category Image" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
